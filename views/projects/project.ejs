<% include ../partials/header %>
<% include ../partials/sidebar-1 %>



<div class="container-fluid">
	<div class="page-body">

	<div class="arrows">
		<span class="glyphicon glyphicon-arrow-left" id="prev"></span>
		<span class="glyphicon glyphicon-arrow-right" id="next"></span>
	</div>
		<h1 class="text-center"><%=project.name%></h1>

		<img class="img-responsive header-img" src="<%= project.image%>">
		<p class="main-text"><%= project.description %></p>
	</div>
</div>





<script type="text/javascript">
	var pathname = window.location.pathname; // Returns path only
	console.log("pathname is " + pathname);
	pathname = pathname.substring(pathname.indexOf("/") + 1);
	id = pathname.substring(pathname.indexOf("/") + 1);
	console.log("id is " + id);

	$("#next").on('click', function(){
		id = parseInt(id);
		if(id <3){
			id = id +1;
			window.location.replace("/projects/" + id);
			console.log(id);
		}else {
			window.location.replace("/projects/" + 1);
		}
	})

	$("#prev").on('click', function(){
		id = parseInt(id);
		if(id>1){
			id = id - 1;
			window.location.replace("/projects/" + id);
			console.log(id);
		}else {
			window.location.replace("/projects/" + 3);
		}
	})
</script>

